<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo nome:"
        android:textSize="18sp"
        android:fontFamily="@font/fredoka"
        app:layout_constraintStart_toStartOf="@id/newNameEditText"
        app:layout_constraintBottom_toTopOf="@id/newNameEditText"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
 />

    <EditText
        android:id="@+id/newNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text_register_login"
        android:padding="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="@font/fredoka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"/>

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_edit_text_register_login"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/newNameEditText"
        app:layout_constraintStart_toStartOf="@+id/newNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/newNameEditText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confire sua senha:"
        android:fontFamily="@font/fredoka"
        android:textSize="18sp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintStart_toStartOf="@+id/passwordEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>